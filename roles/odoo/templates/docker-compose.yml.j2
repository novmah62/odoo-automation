version: '3.8'
services:
  postgres:
    image: {{ postgres_image }}
    env_file:
      - .env
    ports:
      - "{{ db_port }}:5432"
    volumes:
      - odoo-db-data:{{ postgres_data_dir }}
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U odoo"]
      interval: 10s
      timeout: 5s
      retries: 5
      start_period: 10s
    restart: always

  web:
    image: {{ odoo_image }}
    env_file:
      - .env
    depends_on:
      - postgres
    ports:
      - "{{ odoo_http_port }}:8069"
    volumes:
      - odoo-web-data:/var/lib/odoo
      - ./config:/etc/odoo
      - {{ community_addons_path }}:/mnt/extra-addons
      - {{ custom_addons_path }}:/mnt/custom-addons
    restart: always

volumes:
  odoo-web-data:
  odoo-db-data:
